<Window x:Class="TouchMovePage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouchMovePage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid x:Name="PageContainer" Grid.Column="1">
            <Frame x:Name="CurrentFrame" NavigationUIVisibility="Hidden" />
            <Frame x:Name="NextFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed" />
        </Grid>

        <Button Content="Go to Page 1" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Go to Page 2" Click="Button_Click_1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0"/>

    </Grid>
</Window>
