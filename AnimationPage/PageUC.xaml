<UserControl x:Class="AnimationPage.PageUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnimationPage"
             mc:Ignorable="d" >
    <Grid Width="100" Height="200" Background="Cyan" >
        <Grid.RowDefinitions>
            <RowDefinition x:Name="rowdefMenu" Height="auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" />
        <Label x:Name="labName" Grid.Row="1" Content="Name" />

    </Grid>
</UserControl>
